<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload_RoomData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_UploadRoomImage"
            android:src="@drawable/imagent"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Description"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:inputType="text"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/uploadRoomDescription"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Location"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/uploadRoomLocation"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room Price"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/uploadRoomPrice"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="text"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type:"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="18sp"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:id="@+id/rbtnRent"
            />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sale"
                android:layout_weight="1"
               android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:id="@+id/rbtnSale"
                />


        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="15dp"
            android:onClick="btnSelectImage"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Room Detail"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="15dp"
            android:onClick="btnUploadRoomDetail"
            />





    </LinearLayout>

</ScrollView>